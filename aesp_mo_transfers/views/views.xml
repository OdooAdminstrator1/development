<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="action_compute_price_bom_template" model="ir.actions.server">
            <field name="name">Create Transfers</field>
            <field name="model_id" ref="mrp.model_mrp_production"/>
            <field name="binding_model_id" ref="mrp.model_mrp_production"/>
            <field name="binding_view_types">list</field>
            <field name="state">code</field>
            <field name="code">
            if records:
                records.action_create_transfer()
            </field>
        </record>

    <record id="res_config_settings_view_form_aesp_mrp" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.aesp.mrp</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="25"/>
        <field name="inherit_id" ref="mrp.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='process_operations_setting_container']//.." position="inside">
                    <h2>Raw Material Transfers</h2>
                    <div class="row mt16 o_settings_container" id="map_view">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="picking_type_id" string="Raw Material Operation Type: "/>
                                <field name="picking_type_id"
                                       options="{'no_create': True, 'no_create_edit':True, 'no_open': True,}"/>
                            </div>
                        </div>
                    </div>
            </xpath>
        </field>
    </record>

  </data>
</odoo>