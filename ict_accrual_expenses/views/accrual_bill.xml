<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="ict_accrual_expenses_accrual_bill_form" model="ir.ui.view">
            <field name="name">ict_accrual_expenses.accrual_bill_form</field>
            <field name="model">account.move</field>
            <field name="priority" eval="5000" />
            <field name="arch" type="xml">
                <form string="Accrual Bill">
                     <header>
                        <!-- Post -->
                        <button name="action_post" string="Post" class="oe_highlight"
                                type="object" groups="account.group_account_invoice"
                                attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                         <button name="button_cancel" string="Cancel Entry" type="object" groups="account.group_account_invoice"
                                attrs="{'invisible' : ['|', ('id', '=', False), ('state', '!=', 'draft')]}"/>
                         <button name="button_draft" string="Reset to Draft" type="object" groups="account.group_account_invoice"
                                attrs="{'invisible' : ['|', ('restrict_mode_hash_table', '=', True), ('state', 'not in', ('posted', 'cancel'))]}"/>
                     </header>
                    <sheet>
                        <field name="id" invisible="1"/>
                        <field name="is_matched" invisible="1"/>
                        <widget name="web_ribbon" title="Matched"
                                attrs="{'invisible': ['|', ('is_accrual', '=', False), ('is_matched', '=', False)]}"/>
                        <field name="restrict_mode_hash_table" invisible="1"/>
                        <field name="invoice_filter_type_domain" invisible="1"/>
<!--                        <field name="invoice_sequence_number_next_prefix" invisible="1"/>-->
                        <field name="company_currency_id" invisible="1"/>
                        <field name="state" invisible="1" force_save="1"/>
                        <div>
                        <!-- Select next number header (only invoices) -->
<!--                            <span class="o_form_label" attrs="{'invisible': [('invoice_sequence_number_next_prefix', '=', False)]}">First Number:</span>-->

                            <!-- Number -->
                            <h1 class="mt0">
                                <field name="name" readonly="True" attrs="{'invisible':[('name', '=', '/')]}"/>
                            </h1>
                        </div>
<!--                        Accrual Bill Template-->
                        <group>
                            <group id="accrual_header_left_group">
                                  <field name="ref" />
                            </group>
                            <group id="accrual_header_right_group">
                                <field name="invoice_date" string="Bill Date" />
                                <field name="date" string="Accounting Date"  />
                                <field name="journal_id"
                                       invisible="context.get('default_journal_id')"
                                       groups="account.group_account_user"
                                       force_save="1"
                                       options="{'no_create': True}"
                                       domain="[('type', '=?', invoice_filter_type_domain)]"
                                       attrs="{'readonly': True}"/>
                                <field name="company_id" groups="base.group_multi_company"/>

                                <field name="currency_id" readonly="1" force_save="1"
                                       groups="base.group_multi_currency" />
                                <field name="is_accrual" invisible="1" force_save="1"/>
                            </group>
                        </group>

                        <notebook>
                            <page id="Accrual Tab"
                                  string="Accrual Lines" >
                                <field name="invoice_line_ids"
                                       widget="section_and_note_one2many"
                                       mode="tree,kanban"
                                       context="{'journal_id': journal_id, 'default_currency_id': currency_id != company_currency_id and currency_id or False}">
                                    <tree editable="bottom" string="Journal Items" default_order="sequence, date desc, move_name desc, id">
                                        <control>
                                            <create name="add_line_control" string="Add a Line"  />
                                        </control>
                                        <!-- Displayed fields -->
                                        <field name="sequence" widget="handle"/>
                                        <field name="product_uom_category_id" invisible="1"></field>
                                        <field name="move_name" invisible="1"/>
                                        <field name="product_id" optional="show" domain="['|', ('company_id', '=', False), ('company_id', '=', parent.company_id)]"/>
                                        <field name="account_id"
                                               groups="account.group_account_user"
                                               domain="[('deprecated', '=', False), ('user_type_id.type', 'not in', ('receivable', 'payable')), ('company_id', '=', parent.company_id)]"
                                               />

                                        <field name="quantity"/>
                                        <field name="product_uom_id" string="UoM" groups="uom.group_uom" optional="show"/>
                                        <field name="price_unit" string="Price"/>
                                        <field name="price_subtotal"
                                               string="Subtotal"
                                               groups="account.group_show_line_subtotals_tax_excluded"/>
                                        <field name="price_total"
                                               string="Total"
                                               groups="account.group_show_line_subtotals_tax_included"/>

                                        <!-- Others fields -->
                                        <field name="partner_id" invisible="1"/>
                                        <field name="amount_currency" invisible="1"/>
                                        <field name="currency_id" invisible="1"/>
                                        <field name="debit" invisible="1"/>
                                        <field name="credit" invisible="1"/>
                                        <field name="date" invisible="1"/>
                                        <field name="date_maturity" invisible="1"/>

                                        <field name="tax_tag_ids" invisible="1"/>
                                        <field name="company_id" invisible="1"/>
                                        <field name="company_currency_id" invisible="1"/>
                                        <field name="is_rounding_line" invisible="1"/>
                                        <field name="account_internal_type" invisible="1"/>
                                    </tree>
                                    <kanban class="o_kanban_mobile">
                                        <!-- Displayed fields -->
                                        <field name="product_id"/>
                                        <field name="price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                        <field name="price_total" groups="account.group_show_line_subtotals_tax_included"/>
                                        <field name="quantity"/>
                                        <field name="product_uom_id" groups="uom.group_uom"/>
                                        <field name="price_unit"/>
                                        <field name="product_uom_category_id" invisible="1"></field>
                                        <templates>
                                            <t t-name="kanban-box">
                                                <div t-attf-class="oe_kanban_card oe_kanban_global_click ">
                                                     <div class="row">
                                                            <div class="col-2">
                                                                <img t-att-src="kanban_image('product.product', 'image_128', record.product_id.raw_value)" t-att-title="record.product_id.value" t-att-alt="record.product_id.value" style="max-width: 100%;"/>
                                                            </div>
                                                            <div class="col-10">
                                                                <strong>
                                                                    <span>
                                                                        <t t-esc="record.product_id.value"/>
                                                                    </span>
                                                                </strong>
                                                                <div class="text-muted">
                                                                    Quantity:
                                                                    <t t-esc="record.quantity.value"/>
                                                                    <t t-esc="record.product_uom_id.value"/>
                                                                </div>
                                                                <div class="text-muted">
                                                                    Unit Price:
                                                                    <t t-esc="record.price_unit.value"/>
                                                                </div>
                                                                <strong>
                                                                    <span class="float-right text-right">
                                                                        <t t-esc="record.price_subtotal.value" groups="account.group_show_line_subtotals_tax_excluded"/>
                                                                        <t t-esc="record.price_total.value" groups="account.group_show_line_subtotals_tax_included"/>
                                                                    </span>
                                                                </strong>
                                                            </div>
                                                        </div>

                                                </div>
                                            </t>
                                        </templates>

                                        <!-- Others fields -->
                                        <field name="partner_id" invisible="1"/>
                                        <field name="amount_currency" invisible="1"/>
                                        <field name="currency_id" invisible="1"/>
                                        <field name="debit" invisible="1"/>
                                        <field name="credit" invisible="1"/>
                                        <field name="date" invisible="1"/>
                                        <field name="date_maturity" invisible="1"/>

                                        <field name="tax_tag_ids" invisible="1"/>
                                        <field name="company_id" invisible="1"/>
                                        <field name="company_currency_id" invisible="1"/>
                                        <field name="is_rounding_line" invisible="1"/>
                                        <field name="account_internal_type" invisible="1"/>
                                    </kanban>

                                    <form>
                                        <sheet>
                                            <field name="parent_state" invisible="1"/>
                                            <group>
                                                <field name="product_uom_category_id" invisible="1"></field>
                                                <field name="partner_id" invisible="1"/>
                                                <field name="company_id" invisible="1"/>
                                                <field name="product_id" widget="many2one_barcode"/>
                                                <field name="quantity"/>
                                                <field name="product_uom_id" groups="uom.group_uom"/>
                                                <field name="price_unit"/>
                                                <field name="currency_id" invisible="1"/>
                                            </group>
                                            <group>
                                                <field name="account_id" options="{'no_create': True}" domain="[('company_id', '=', company_id)]" attrs="{'readonly':[('parent_state','=','posted')]}"/>
                                            </group>
                                        </sheet>
                                    </form>
                                </field>

                            </page>
                            <page id="aml_tab" string="Journal Items" groups="account.group_account_user">
                                <field name="line_ids" readonly="1"
                                       context="{'line_ids': line_ids, 'journal_id': journal_id, 'default_currency_id': currency_id != company_currency_id and currency_id or False}"
                                       >
                                    <tree create="false" edit="false" delete="false" string="Journal Items" default_order="sequence, date desc, move_name desc, id">
                                        <!-- Displayed fields -->
                                        <field name="account_id" readonly="1" attrs="{'readonly':1}"
                                               />

                                        <field name="date_maturity"
                                               optional="hide"
                                               invisible="context.get('view_no_maturity')"
                                               readonly="1"
                                               attrs="{'invisible': [('display_type', 'in', ('line_section', 'line_note'))]}"/>
                                        <field name="amount_currency"
                                               groups="base.group_multi_currency"
                                               readonly="1"
                                               optional="hide"/>
                                        <field name="currency_id" options="{'no_create': True}"
                                               groups="base.group_multi_currency"
                                               readonly="1"
                                               />
                                        <field name="debit"
                                               sum="Total Debit"
                                               readonly="1"
                                               />
                                        <field name="credit"
                                               sum="Total Credit"
                                               readonly="1"
                                               />
<!--                                        <field name="country_id" invisible="1"/>-->

                                        <!-- Others fields -->

                                        <field name="product_id" invisible="1"/>
                                        <field name="quantity" invisible="1"/>
                                        <field name="product_uom_id" invisible="1"/>
                                        <field name="price_unit" invisible="1"/>
                                        <field name="discount" invisible="1"/>
                                        <field name="price_subtotal" invisible="1"/>
                                        <field name="price_total" invisible="1"/>

                                        <field name="sequence" invisible="1"/>
                                        <field name="move_name" invisible="1"/>
                                        <field name="date" invisible="1"/>
                                        <field name="company_id" invisible="1"/>
                                        <field name="company_currency_id" invisible="1"/>
                                        <field name="display_type" force_save="1" invisible="1"/>
                                        <field name="is_rounding_line" invisible="1"/>
                                        <field name="exclude_from_invoice_tab" invisible="1"/>
                                        <field name="account_internal_type" invisible="1"/>
                                    </tree>
                                    <!-- Form view to cover mobile use -->
                                    <form create="false" edit="false">
                                      <group>
                                        <field name="tax_line_id" invisible="1"/>
                                        <field name="account_id" domain="[('company_id', '=', parent.company_id), ('deprecated', '=', False)]"/>
                                        <field name="name"/>
                                        <field name="amount_currency" groups="base.group_multi_currency"/>
                                        <field name="company_currency_id" invisible="1"/>
                                        <field name="company_id" invisible="1"/>
                                        <field name="currency_id" options="{'no_create': True}" groups="base.group_multi_currency"/>
                                        <field name="debit" sum="Total Debit"/>
                                        <field name="credit" sum="Total Credit"/>
                                        <field name="date_maturity" required="0" invisible="context.get('view_no_maturity', False)"/>
                                      </group>
                                    </form>
                                </field>
                            </page>

                        </notebook>
                    </sheet>
                     <div class="o_attachment_preview"
                         attrs="{'invisible': [('state', '!=', 'draft')]}" />
                    <!-- Chatter -->
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="ict_accrual_expenses_accrual_bill_tree" model="ir.ui.view">
            <field name="name">ict_accrual_expenses.accrual_bill.tree</field>
            <field name="model">account.move</field>
            <field name="priority" eval="5000" />
            <field name="arch" type="xml">
                <tree decoration-info="state == 'draft'" string="Accrual Bills" decoration-muted="state == 'cancel'" js_class="account_tree">
                    <field name="name"/>
                    <field name="invoice_date" optional="show" string="Accrual Bill Date"/>
                    <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}" optional="show"/>
                    <field name="invoice_date_due" optional="show"/>
                    <field name="amount_total_signed" string="Total" sum="Total" optional="show"/>
                    <field name="amount_residual_signed" string="Amount Due" sum="Amount Due" optional="show"/>
                    <field name="currency_id" invisible="1"/>
                    <field name="company_currency_id" invisible="1"/>
                    <field name="state" optional="show"/>
                    <field name="move_type" invisible="1"/>
                    <field name="is_accrual" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="ict_accrual_expenses_kanban_view" model="ir.ui.view">
            <field name="name">ProjectName.accrual_bill.kanban</field>
            <field name="model">account.move</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <field name="journal_id"/>
                    <field name="ref"/>
                    <field name="date"/>
                    <field name="state"/>
                    <field name="is_accrual" invisible="1"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="row mb4">
                                    <div class="col-6 o_kanban_record_headings">
                                        <strong><span><field name="journal_id"/></span></strong>
                                    </div>
                                    <div class="col-6 text-right">
                                        <strong><i class="fa fa-clock-o" aria-label="Date" role="img" title="Date"/> <t t-esc="record.date.value"/></strong>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-12">
                                        <span><field name="ref"/></span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-6">
                                        <span><field name="amount_total" widget='monetary'/></span>
                                        <span><field name="currency_id" invisible="1"/></span>
                                    </div>
                                    <div class="col-6">
                                        <span class="float-right">
                                            <field name="state" widget="label_selection" options="{'classes': {'draft': 'default', 'posted': 'success'}}"/>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="accrual_bill_act_window" model="ir.actions.act_window">
            <field name="name">Accrual Bill</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.move</field>
<!--            <field name="view_type">tree</field>-->
            <field name="view_mode">tree,form,kanban</field>
            <field name="context">{"search_default_example_field":1, 'default_is_accrual':True}</field>
            <field name="domain">[['is_accrual','=',True]]</field>
<!--            <field name="views" eval="[[ref('ict_accrual_expenses_accrual_bill_tree'),'tree'], ['ict_accrual_expenses_accrual_bill_form', 'form'], ['ict_accrual_expenses_kanban_view', 'kanban']]"/>-->
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new Accrual Bill.
                </p>
            </field>
        </record>

        <record id="accrual_bill_act_window_tree_view" model="ir.actions.act_window.view">
            <field name="sequence" eval="0"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="ict_accrual_expenses_accrual_bill_tree"/>
            <field name="act_window_id" ref="accrual_bill_act_window"/>
        </record>
        <record id="accrual_bill_act_window_form_view" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="ict_accrual_expenses_accrual_bill_form"/>
            <field name="act_window_id" ref="accrual_bill_act_window"/>
        </record>
        <record id="accrual_bill_act_window_kanban_view" model="ir.actions.act_window.view">
            <field name="sequence" eval="2"/>
            <field name="view_mode">kanban</field>
            <field name="view_id" ref="ict_accrual_expenses_kanban_view"/>
            <field name="act_window_id" ref="accrual_bill_act_window"/>
        </record>

        <menuitem name="Accrual" id="accrual_bill_menu" parent="account.menu_finance_payables" action="accrual_bill_act_window"/>

    </data>
</odoo>