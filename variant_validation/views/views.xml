<odoo>
  <data>
      <record id="product_product_tree_view_inherited" model="ir.ui.view">
        <field name="name">product.product.tree.view.inherited</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_product_tree_view"></field>
        <field name="arch" type="xml">
          <xpath expr="//field[@name='product_template_variant_value_ids']" position="after">
            <field name="product_template_variant_value_comma" invisible="1" />
          </xpath>
        </field>
      </record>
      <record id="product_label_layout_form_color_picker_inherited" model="ir.ui.view">
        <field name="name">product.label.layout.form.color.picker.inherited</field>
        <field name="model">product.label.layout</field>
        <field name="inherit_id" ref="product.product_label_layout_form"></field>
        <field name="arch" type="xml">
          <xpath expr="//field[@name='extra_html']" position="after">
            <gorup>
              <field name="color_picker" widget="colorpicker"></field>
            </gorup>
          </xpath>
        </field>
      </record>

  </data>
</odoo>